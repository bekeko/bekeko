using namespace std;

void fakt(int *x) {
	long top=1;
	int a;
	for (a=1;a <=*x;a++){
		top = top*a;
		
	}
	
	*x = top;

}

int main(){	
	int *ptr;
	int dizi[10];
	ptr = dizi;
	for (int i = 0; i < 10; i++) {
		cout << 10 - i << "Sayi Gir" << endl;
		cin >> dizi[i];
		ptr = &dizi[i];
		fakt(ptr);
		dizi[i] = *ptr;

	}
	for (int b = 0; b < 10; b++) {
		cout << dizi[b] << endl;
	}
	
	
	system("PAUSE");
    return 0;
}
